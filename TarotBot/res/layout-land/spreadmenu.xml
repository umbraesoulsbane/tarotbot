<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:baselineAlignBottom="true"
  android:background="@drawable/menu_background"
  >
<ImageView  
	android:id="@+id/mainlogo"
	android:layout_width="fill_parent" 
    android:layout_height="120dip"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_gravity="center"
    android:src="@drawable/biglogo"
    android:background="@android:color/transparent"
    android:adjustViewBounds="true"
     /> 
<ToggleButton android:id="@+id/reversal_button"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:typeface="serif"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/menu_colors"
	android:paddingBottom="10dp"	
  	android:background="@drawable/reversal_selector"
    android:textOn="@string/reverse_cards_yes"
    android:textOff="@string/reverse_cards_no"
   />
<LinearLayout
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
>    
<LinearLayout
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="3"
/>     
<ListView 
	android:id="@+id/spreadmenulist"
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_gravity="center"
    android:dividerHeight=".25px"
	android:headerDividersEnabled="true"
	android:footerDividersEnabled="false"
	android:divider="#333333"
	android:drawSelectorOnTop="false"		
	android:listSelector="@android:color/transparent"
	android:layout_weight="2">
</ListView> 
<LinearLayout
	android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:layout_weight="3"
/>    
</LinearLayout>
</LinearLayout>
