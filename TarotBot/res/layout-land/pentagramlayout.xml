<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:layout_gravity="center">
	<RelativeLayout android:id="@+id/header"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="wrap_content" android:layout_width="fill_parent"
		android:layout_gravity="center">
		<TextView android:id="@+id/title" android:layout_width="wrap_content"
			android:gravity="center_vertical" android:textSize="12sp"
			android:textColor="#ffffff" android:text="THE PENTAGRAM"
			android:typeface="serif" android:textStyle="bold"
			android:layout_height="wrap_content" android:layout_centerInParent="true"
			android:padding="2dip" />
	</RelativeLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:layout_below="@id/title" android:layout_marginTop="28dip">
		<ScrollView android:id="@+id/textAreaScroller"
			android:layout_width="fill_parent" android:layout_height="fill_parent"
			android:fillViewport="true" android:fadingEdge="none">
			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:orientation="vertical">
				<LinearLayout android:id="@+id/toprow"
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_width="fill_parent" android:layout_height="fill_parent"

					android:orientation="horizontal" android:layout_gravity="bottom"
					android:gravity="bottom" android:clipChildren="true"
					android:layout_weight="1">
					<LinearLayout android:id="@+id/leftcolumn"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_width="fill_parent" android:layout_height="fill_parent"

						android:orientation="vertical" android:layout_gravity="center"
						android:gravity="center" android:clipChildren="true"
						android:layout_weight="1" android:layout_marginTop="15dip">
						<LinearLayout android:id="@+id/more_filler"
							xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_height="fill_parent" android:layout_width="wrap_content"

							android:layout_gravity="center" android:gravity="center"
							android:clipChildren="true" android:layout_margin="16dip"
							android:layout_weight="5"/>
						<LinearLayout android:id="@+id/pentagram_fire_back"
							xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_height="fill_parent" android:layout_width="wrap_content"

							android:layout_gravity="center" android:gravity="center"
							android:clipChildren="true" android:layout_margin="16dip"
							android:layout_weight="3">
							<ImageView android:id="@+id/pentagram_fire"
								android:layout_height="wrap_content" android:layout_width="wrap_content"
								android:clickable="true" android:scaleType="fitCenter"
								android:adjustViewBounds="true" android:layout_gravity="center"
								android:gravity="center" android:padding="1px"></ImageView>
						</LinearLayout>
					</LinearLayout>

					<LinearLayout android:id="@+id/centercolumn"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_width="fill_parent" android:layout_height="fill_parent"

						android:orientation="vertical" android:layout_gravity="center"
						android:gravity="center" android:clipChildren="true"
						android:layout_weight="1">
						<LinearLayout android:id="@+id/pentagram_spirit_back"
							xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_height="fill_parent" android:layout_width="wrap_content"

							android:layout_gravity="center" android:gravity="center"
							android:clipChildren="true" android:layout_margin="16dip"
							android:layout_weight="3">
							<ImageView android:id="@+id/pentagram_spirit"
								android:layout_height="fill_parent" android:layout_width="wrap_content"
								android:clickable="true" android:scaleType="fitCenter"
								android:adjustViewBounds="true" android:layout_gravity="center"
								android:gravity="center" android:padding="1px"></ImageView>
						</LinearLayout>
						<LinearLayout android:id="@+id/more_filler"
							xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_height="fill_parent" android:layout_width="wrap_content"

							android:layout_gravity="center" android:gravity="center"
							android:clipChildren="true" android:layout_margin="16dip"
							android:layout_weight="5"/>
					</LinearLayout>

					<LinearLayout android:id="@+id/rightcolumn"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_width="fill_parent" android:layout_height="fill_parent"

						android:orientation="vertical" android:layout_gravity="center"
						android:gravity="center" android:clipChildren="true"
						android:layout_weight="1" android:layout_marginTop="15dip">
						<LinearLayout android:id="@+id/more_filler"
							xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_height="fill_parent" android:layout_width="wrap_content"

							android:layout_gravity="center" android:gravity="center"
							android:clipChildren="true" android:layout_margin="16dip"
							android:layout_weight="5"/>
						<LinearLayout android:id="@+id/pentagram_earth_back"
							xmlns:android="http://schemas.android.com/apk/res/android"
							android:layout_height="fill_parent" android:layout_width="wrap_content"

							android:layout_gravity="center" android:gravity="center"
							android:clipChildren="true" android:layout_margin="16dip"
							android:layout_weight="3">
							<ImageView android:id="@+id/pentagram_earth"
								android:layout_height="wrap_content" android:layout_width="wrap_content"
								android:clickable="true" android:scaleType="fitCenter"
								android:adjustViewBounds="true" android:layout_gravity="center"
								android:gravity="center" android:padding="1px"></ImageView>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout android:id="@+id/bottomrow"
					xmlns:android="http://schemas.android.com/apk/res/android"
					android:layout_height="fill_parent" android:layout_width="fill_parent"

					android:orientation="horizontal" android:layout_gravity="top"
					android:gravity="top" android:clipChildren="true"
					android:layout_weight="3">
					<LinearLayout android:id="@+id/leftbottomfiller"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_height="fill_parent" android:layout_width="fill_parent"

						android:layout_gravity="top" android:gravity="top"
						android:clipChildren="true" android:layout_weight="3" />
					<LinearLayout android:id="@+id/pentagram_water_back"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_height="wrap_content" android:layout_width="fill_parent"

						android:layout_gravity="top" android:gravity="top"
						android:clipChildren="true" android:layout_margin="16dip"
						android:layout_weight="3">
						<ImageView android:id="@+id/pentagram_water"
							android:layout_height="fill_parent" android:layout_width="wrap_content"
							android:clickable="true" android:scaleType="fitCenter"
							android:adjustViewBounds="true" android:layout_gravity="top"
							android:gravity="top" android:padding="1px"></ImageView>
					</LinearLayout>
					<LinearLayout android:id="@+id/bottomfiller"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_height="fill_parent" android:layout_width="fill_parent"

						android:layout_gravity="top" android:gravity="top"
						android:clipChildren="true" android:layout_weight="3" />
					<LinearLayout android:id="@+id/pentagram_air_back"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_height="wrap_content" android:layout_width="fill_parent"

						android:layout_gravity="top" android:gravity="top"
						android:layout_margin="16dip" android:clipChildren="true"
						android:layout_weight="3">
						<ImageView android:id="@+id/pentagram_air"
							android:layout_height="fill_parent" android:layout_width="wrap_content"
							android:clickable="true" android:scaleType="fitCenter"
							android:adjustViewBounds="true" android:layout_gravity="top"
							android:gravity="top" android:padding="1px"></ImageView>
					</LinearLayout>
					<LinearLayout android:id="@+id/rightbottomfiller"
						xmlns:android="http://schemas.android.com/apk/res/android"
						android:layout_height="fill_parent" android:layout_width="fill_parent"

						android:layout_gravity="top" android:gravity="top"
						android:clipChildren="true" android:layout_weight="3" />
				</LinearLayout>
			</LinearLayout>
		</ScrollView>
	</LinearLayout>
</RelativeLayout>