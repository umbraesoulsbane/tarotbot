<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000">
<ScrollView android:id="@+id/textAreaScroller" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"   
    android:fillViewport="true"
    android:fadingEdge="none">
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_margin="4dip"  
  android:background="#000000"
  android:orientation="vertical">	

<LinearLayout android:id="@+id/rowone"
	xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_gravity="center"
  android:gravity="center"
  android:background="#000000"
  android:layout_weight="1">

<LinearLayout android:id="@+id/dialectic_thesis_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  android:layout_gravity="center"
  android:gravity="center"
  	android:background="#000"
	android:clipToPadding="true"    
	android:layout_margin="2dip"
  	android:layout_weight="3">  
<ImageView android:id="@+id/dialectic_thesis" 
	android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitCenter"
  android:layout_gravity="center"
  android:gravity="center"    
    android:adjustViewBounds="true"
    android:padding="1px"
    android:src="@drawable/pent_01"></ImageView>          
</LinearLayout>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
	  	android:layout_width="fill_parent"
	  	android:background="#000"
	  	android:layout_weight="3"/>	  		  	
<LinearLayout android:id="@+id/dialectic_antithesis_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  android:layout_gravity="center"
  android:layout_margin="2dip"
  android:gravity="center"  	  
  	android:background="#000"
  	android:layout_weight="3">  
<ImageView android:id="@+id/dialectic_antithesis" 
	android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
  android:layout_gravity="center"
  android:gravity="center"    
    android:padding="1px"
    android:src="@drawable/pent_02"></ImageView>          
</LinearLayout>

</LinearLayout>


<LinearLayout android:id="@+id/rowtwo"
	xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
    android:layout_gravity="center"
	android:gravity="center"
  android:background="#000000"  
  android:layout_weight="1">
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
	  	android:layout_width="fill_parent"
	  	android:background="#000"
	  	android:layout_weight="3"/>
<LinearLayout android:id="@+id/dialectic_synthesis_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	android:background="#000"	
  	android:layout_gravity="center"
	android:gravity="center"
	android:layout_margin="2dip"
	android:clipToPadding="true"
  	android:layout_weight="3">  
<ImageView android:id="@+id/dialectic_synthesis" 
	android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitCenter"
    android:adjustViewBounds="true"
    android:layout_gravity="center"
	android:gravity="center"
    android:padding="1px"
    android:src="@drawable/pent_07"></ImageView>          
</LinearLayout>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_height="fill_parent"
	  	android:layout_width="fill_parent"
	  	android:background="#000"
	  	android:layout_weight="3"/>	  		  	
</LinearLayout>

</LinearLayout>
</ScrollView>  
</LinearLayout>