<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  android:id="@+id/optionlayout"	
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:baselineAlignBottom="true"
  android:background="@drawable/menu_background"
  >
<ImageView  
	android:id="@+id/mainlogo"
	android:layout_width="fill_parent" 
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:layout_gravity="center"
    android:src="@drawable/biglogo"
    android:scaleType="fitCenter"
    android:background="@android:color/transparent"
    android:adjustViewBounds="true"
     /> 
<ToggleButton android:id="@+id/reversal_button"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:typeface="serif"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/menu_colors"
	android:paddingBottom="10dp"	
  	android:background="@drawable/reversal_selector"
    android:textOn="@string/reverse_cards_yes"
    android:textOff="@string/reverse_cards_no"
   />
<ToggleButton android:id="@+id/trumps_only_button"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:typeface="serif"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/menu_colors"
	android:paddingBottom="10dp"	
  	android:background="@drawable/reversal_selector"
    android:textOn="@string/trumps_only_yes"
    android:textOff="@string/trumps_only_no"
   />
<ToggleButton android:id="@+id/custom_deck_button"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:typeface="serif"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/menu_colors"
	android:paddingBottom="10dp"	
  	android:background="@drawable/reversal_selector"
    android:textOn="@string/custom_deck_yes"
    android:textOff="@string/custom_deck_no"
   />     
<TextView android:id="@+id/custom_deck_note"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   />
	
<ToggleButton android:id="@+id/background_color_button"
   android:layout_width="fill_parent"
   android:layout_height="wrap_content"
   android:typeface="serif"
    android:textSize="15sp"
    android:textStyle="bold"
    android:textColor="@color/menu_colors"
	android:paddingBottom="10dp"	
  	android:background="@drawable/reversal_selector"
     android:textOn="@string/background_color_choice"
     android:textOff="@string/background_color_choice"
     android:onClick="displayBackgroundColorChoice" />
</LinearLayout>
