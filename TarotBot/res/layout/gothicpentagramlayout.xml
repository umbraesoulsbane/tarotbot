<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000">
<ScrollView android:id="@+id/textAreaScroller" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
	>	
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="5000dip"
  android:layout_height="5000dip"
  android:layout_centerHorizontal="true"
  android:layout_centerVertical="true"
  android:gravity="center"
  android:layout_gravity="center"
  android:orientation="vertical"
  android:layout_weight="1">

<LinearLayout android:id="@+id/goth_pent_top"  
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_centerHorizontal="true"
	  android:layout_centerVertical="true"
	  android:gravity="center"
	  android:layout_gravity="center"
	android:orientation="horizontal"
	android:layout_weight="1">

<LinearLayout android:id="@+id/goth_pent_three_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="130dip"
  	android:layout_width="72dip"
  	android:background="#000"
  	android:layout_marginTop="30dip"
  	android:layout_marginRight="20dip"  	
  	android:gravity="left">  
<ImageView android:id="@+id/goth_pent_three" 
	android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:layout_marginTop="1dip"
    android:layout_marginBottom="1dip"
    android:src="@drawable/pent_03"></ImageView>          
</LinearLayout>


<LinearLayout android:id="@+id/goth_pent_center"  
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	  android:layout_height="fill_parent"
	  android:layout_centerHorizontal="true"
	  android:layout_centerVertical="true"
	  android:gravity="center"
	  android:layout_gravity="center"
	android:orientation="vertical">
<LinearLayout android:id="@+id/goth_pent_six_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="130dip"
  	android:layout_width="fill_parent"
  	android:background="#000"
  	android:gravity="top">  
<ImageView android:id="@+id/goth_pent_six" 
	android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:layout_marginTop="1dip"
    android:layout_marginBottom="1dip"
    android:src="@drawable/pent_06"></ImageView>          
</LinearLayout>

<LinearLayout android:id="@+id/goth_pent_one_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="130dip"
  	android:layout_width="72dip"
  	android:background="#000"
  	android:layout_marginTop="10dip"
  	android:layout_below="@id/goth_pent_six_back"
  	android:layout_toRightOf="@id/goth_pent_three_back">  
<ImageView android:id="@+id/goth_pent_one" 
	android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:layout_marginTop="1dip"
    android:layout_marginBottom="1dip"
    android:src="@drawable/pent_01"></ImageView>          
</LinearLayout>
</LinearLayout>

<LinearLayout android:id="@+id/goth_pent_four_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="130dip"
  	android:layout_width="72dip"
  	android:background="#000"
  	android:layout_marginTop="30dip"  	
  	android:layout_marginLeft="20dip"
  	android:gravity="right"
  	android:layout_toRightOf="@id/goth_pent_six_back">  
<ImageView android:id="@+id/goth_pent_four" 
	android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:layout_marginTop="1dip"
    android:layout_marginBottom="1dip"
    android:src="@drawable/pent_04"></ImageView>          
</LinearLayout>
</LinearLayout>

<LinearLayout android:id="@+id/goth_pent_bottom"  
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:layout_centerHorizontal="true"
	  android:layout_centerVertical="true"
	  android:gravity="center"
	  android:layout_gravity="center"
	  android:layout_weight="3"
	android:orientation="horizontal">

<LinearLayout android:id="@+id/goth_pent_five_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="130dip"
  	android:layout_width="72dip"
  	
  	android:background="#000"
  	android:layout_marginLeft="30dip"
  	android:layout_marginRight="40dip"
  	android:layout_marginTop="10dip"
  	android:layout_below="@id/goth_pent_one_back">  
<ImageView android:id="@+id/goth_pent_five" 
	android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:layout_marginTop="1dip"
    android:layout_marginBottom="1dip"
    android:src="@drawable/pent_05"></ImageView>          
</LinearLayout>

<LinearLayout android:id="@+id/goth_pent_two_back" 
  	xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_height="130dip"
  	android:layout_width="72dip"
  	android:background="#000"
  	android:layout_marginTop="10dip"
  	android:layout_below="@id/goth_pent_one_back"
  	android:layout_toRightOf="@id/goth_pent_five_back">  
<ImageView android:id="@+id/goth_pent_two" 
	android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:scaleType="fitXY"
    android:layout_marginLeft="1dip"
    android:layout_marginRight="1dip"
    android:layout_marginTop="1dip"
    android:layout_marginBottom="1dip"
    android:src="@drawable/pent_02"></ImageView>          
</LinearLayout>
</LinearLayout>
</LinearLayout>
</ScrollView>  
</LinearLayout>