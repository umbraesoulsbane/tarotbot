<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#000000">
<ScrollView android:id="@+id/textAreaScroller" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
	>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:layout_centerHorizontal="true"
  android:layout_centerVertical="true"
  android:gravity="center"
  android:layout_gravity="center">    

<ImageView android:id="@+id/arrow_past_back" 
	android:layout_width="90dip"
    android:layout_height="162dip"
    android:layout_marginLeft="4dip"
    android:layout_marginTop="4dip"
    android:background="#000000"></ImageView>
    
<ImageView android:id="@+id/arrow_past" 
	android:layout_width="88dip"
    android:layout_height="160dip"
    android:layout_marginLeft="5dip"
    android:layout_marginTop="5dip"
    android:clickable="true"
    android:scaleType="fitXY"></ImageView>
    
<ImageView android:id="@+id/arrow_present_back" 
	android:layout_width="90dip"
    android:layout_height="162dip"
    android:layout_marginLeft="101dip"
    android:layout_marginTop="4dip"
    android:background="#000000"></ImageView>

<ImageView android:id="@+id/arrow_present" 
	android:layout_width="88dip"
    android:layout_height="160dip"
    android:layout_marginLeft="102dip"
    android:layout_marginTop="5dip"
    android:clickable="true"
    android:scaleType="fitXY"></ImageView> 
    
<ImageView android:id="@+id/arrow_future_back" 
	android:layout_width="90dip"
    android:layout_height="162dip"
    android:layout_marginLeft="198dip"
    android:layout_marginTop="4dip"
    android:background="#000000"></ImageView>

<ImageView android:id="@+id/arrow_future"  
	android:layout_width="88dip"
    android:layout_height="160dip"
    android:layout_marginLeft="199dip"
    android:layout_marginTop="5dip"
    android:clickable="true"
    android:scaleType="fitXY"></ImageView>  
</RelativeLayout>
</ScrollView>
</RelativeLayout>